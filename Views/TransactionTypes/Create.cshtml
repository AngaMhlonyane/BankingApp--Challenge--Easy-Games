@model BankingApp__easygames.Models.TransactionType

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="TransactionTypeName" class="control-label"></label>
        <select asp-for="TransactionTypeName" class="form-control">
            @foreach (var value in Enum.GetValues(typeof(BankingApp__easygames.Models.TransactionTypeName)))
            {
                <option value="@((int)value)">@value</option>
            }
        </select>
        <span asp-validation-for="TransactionTypeName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
