@model BankingApp__easygames.Models.Client
<style>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" / >
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" / >
    <link rel="stylesheet" href="~/BankingApp__easygames.styles.css" asp-append-version="true" / ></style>
<h2>Delete Client</h2>

<div>
    <h4>Are you sure you want to delete this client?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
     
    </dl>
    <form asp-action="DeleteClient" asp-route-id="@Model.ClientID" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" asp-controller="Clients" class="btn btn-secondary">Cancel</a>
    </form>
</div>
