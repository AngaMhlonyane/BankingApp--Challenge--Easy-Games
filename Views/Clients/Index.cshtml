
@model List<Client>
<style>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" / >
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" / >
    <link rel="stylesheet" href="~/BankingApp__easygames.styles.css" asp-append-version="true" / ></style>
<h2>Clients</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Balance</th>
            <th>Actions</th> <!-- New column for actions -->
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.Name</td>
                <td>@client.Surname</td>
                <td>@client.ClientBalance</td>
                <td>
                    <!-- Edit button -->
                    <a href="@Url.Action("EditClient", "Clients", new { id = client.ClientID })" class="btn btn-primary">Edit</a>

                    <!-- Delete button -->
                    <form asp-action="DeleteClient" asp-route-id="@client.ClientID" method="post" onsubmit="return confirm('Are you sure you want to delete this client?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
